<h1>Listing residents</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Street</th>
    <th>City</th>
    <th>Zip code</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @residents.each do |resident| %>
  <tr>
    <td><%= resident.name %></td>
    <td><%= resident.street %></td>
    <td><%= resident.city %></td>
    <td><%= resident.zip_code %></td>
    <td><%= resident.state %></td>
    <td><%= link_to 'Show', resident %></td>
    <td><%= link_to 'Edit', edit_resident_path(resident) %></td>
    <td><%= link_to 'Destroy', resident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

